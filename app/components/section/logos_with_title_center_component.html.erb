<div class="px-5 md:px-10 lg:px-20 mx-auto max-w-6xl text-center">
  <p class="uppercase font-medium text-slate-200 mb-10 text-base">
    <%= @title %>
  </p>

  <div class="grid grid-cols-2 sm:grid-cols-4 gap-8 md:gap-16 place-items-center">
    <% ["01", "02", "03", "04"].each do |item| %>
      <%= image_tag("logos/logo_#{item}.png", srcset: { "logos/logo_#{item}@2x.png" => '2x' }, class: 'invert saturate-0 contrast-25 opacity-50 hover:opacity-100 brightness-50 ') %>
    <% end %>
  </div>
</div>
